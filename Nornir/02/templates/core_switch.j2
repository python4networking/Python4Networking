{% for vlan in host.info_switches.vlans %}

vlan {{ vlan.id }}
 name {{ vlan.name }}

interface Vlan{{ vlan.id }}
 ip address 10.0.{{ vlan.id }}.1 255.255.255.0
 no shutdown
{% endfor %}

{% for interface in host.info_switches.interfaces_trunk %}
interface {{ interface }}
 switchport trunk encapsulation dot1q
 switchport mode trunk
 no shutdown
{% endfor %}

